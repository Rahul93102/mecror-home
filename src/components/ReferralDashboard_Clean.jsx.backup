          moderate: simulations.moderate[index] || 0,
          aggressive: simulations.aggressive[index] || 0,
          growth: index > 0 ? conservative - simulations.conservative[index - 1] : conservative
        }));

        setSimulationData(simulationChartData);
        setLoading(false);
